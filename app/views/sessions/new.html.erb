<h1>Create a New User Account</h1>

<% flash.each do |name, message| %>
  <%= content_tag :div, message %>
<% end %>

<%= form_tag('/login', method: 'post') do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %><br>

  <%= label_tag :password %>
  <%= password_field_tag :password %><br>

  <%= submit_tag "Login" %>
<% end %>